{# templates/reference/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Выгрузить или заменить файл{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        {{ form_start(form) }}
        {{ form_end(form) }}
    </div>
    <br>

    <br>
    <div class="row">

    </div>
    <hr>
    {% for row in data %}
        <div class="row">
            <div class="col-2">{{ row.uniqid }}</div>
            <div class="col-4">{{ row.filename }}</div>
            <div class="col-6">{{ row.error }}</div>
        </div>
    {% endfor %}
{% endblock %}
