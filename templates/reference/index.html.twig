{# templates/reference/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Справочник{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1 class="text-center">Справочник</h1>
        <a href="{{ path('referenceImport') }}" class="btn btn-success d-block my-2" id="csv">Импорт CSV</a>
        {{ dump(data) }}
    </div>
        <div class="row">
            <div class="col-2">Код</div>
            <div class="col-3">Название</div>
            <div class="col-7">Ошибка</div>
        </div>
        {% for row in data %}
            <div class="row">
                <div class="col-2">{{ data.hash }}</div>
                <div class="col-3">{{ data.name }}</div>
                <div class="col-7">{{ data.error }}</div>
            </div>
        {% endfor %}
{% endblock %}
