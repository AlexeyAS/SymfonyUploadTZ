{# templates/reference/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Справочник{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1 class="text-center">Справочник</h1>
        {# <a href="{{ path('referenceImport') }}" class="btn btn-success d-block my-2" id="csv">Импорт CSV</a> #}
        {{ form_start(form) }}
        {{ form_end(form) }}
    </div>
    <br>
    <div class="row">
        <div class="col-2">Код</div>
        <div class="col-4">Название</div>
        <div class="col-6">Ошибка</div>
    </div>
    <hr>
    {% for row in data %}
        <div class="row">
            <div class="col-2">{{ row.uniqid }}</div>
            <div class="col-4">{{ row.filename }}</div>
            <div class="col-6">{{ row.error }}</div>
        </div>
    {% endfor %}
{% endblock %}
