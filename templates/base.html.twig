{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Columbus{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous">
    {% block stylesheets %}{# {{ encore_entry_link_tags('app') }} #}{% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light mx-2" style="height: 70px;">
    <a class="navbar-brand" href="{{ path('upload') }}">Импорт значений и файла</a>
    <a class="navbar-brand" href="{{ path('reference') }}">Только загрузить или заменить файл</a>

    <div class="collapse navbar-collapse" id="navbarSupportedContent"></div>
    <ul class="nav navbar-nav navbar-right">
        {% if app.user %}
            <li><a class="nav-link disable"><b>{{ app.user.username }}</b></a></li>
            <li><a class="nav-link" href="{{ path('app_logout') }}">Выход</a></li>
        {% else %}
            <li><a class="nav-link" href="{{ path('app_login') }}">Вход</a></li>
            <li>
                <a class="nav-link" href="{{ path('registration') }}">Регистрация</a>
            </li>
        {% endif %}
    </ul>
</nav>
<div class="container text-center">
    {% block body %}{% endblock %}
</div>
{% block javascripts %}{% endblock %}
</body>
</html>